{
  "name": "@adviser/cement",
  "version": "0.0.0",
  "description": "better try/catch/finally handling",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./web": {
      "types": "./web/index.d.ts",
      "import": "./web/index.js"
    },
    "./utils": {
      "types": "./utils/index.d.ts",
      "import": "./utils/index.js"
    },
    "./cf": {
      "types": "./cf/index.d.ts",
      "import": "./cf/index.js"
    },
    "./node": {
      "types": "./node/index.d.ts",
      "import": "./node/index.js"
    },
    "./deno": {
      "types": "./deno/index.d.ts",
      "import": "./deno/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "build": "pnpm run build:tsc; pnpm run build:js; pnpm run build:deno",
    "build:tsc": "rm -rf ./dist/ts ; tsc",
    "build:js": "rm -rf dist/pkg ; mkdir -p dist/pkg; cp -pr ./dist/ts/src/* dist/pkg",
    "xbuild:js": "tsup --metafile --out-dir dist/pkg src/index.ts src/*/index.ts --sourcemap --format cjs,esm --dts --clean --external node:fs --external node:path",
    "build:deno": "deno publish --dry-run --unstable-sloppy-imports --allow-dirty",
    "test": "pnpm run test:js; pnpm run test:deno",
    "test:deno": "deno run --quiet --allow-net --allow-write --allow-run  --allow-sys --allow-ffi  --allow-read --allow-env  ./node_modules/vitest/vitest.mjs --run --project node",
    "test:js": "vitest --run",
    "pubdir": "bash -xe ./prepare-pubdir.sh",
    "presmoke": "pnpm run pubdir ; cd pubdir ; pnpm pack",
    "smoke": "bash ./smoke/it.sh",
    "lint": "eslint .",
    "prettier": "prettier .",
    "format": "prettier ."
  },
  "keywords": [],
  "author": "Meno Abels <meno.abels@adviser.com>",
  "license": "AFL-2.0",
  "bugs": {
    "url": "https://github.com/mabels/cement/issues"
  },
  "homepage": "https://github.com/mabels/cement#readme",
  "dependencies": {
    "ts-essentials": "^10.0.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.8",
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/browser": "^3.1.1",
    "esbuild-plugin-replace": "^1.4.0",
    "esbuild-plugin-resolve": "^2.0.0",
    "eslint": "9.22.0",
    "playwright": "^1.51.1",
    "playwright-chromium": "^1.51.1",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.24.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "edgedriver",
      "geckodriver",
      "msw"
    ],
    "onlyBuiltDependencies": [
      "esbuild",
      "playwright-chromium",
      "workerd"
    ]
  }
}
