{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ESNext", "DOM"],
    "module": "nodenext",
    "paths": {
      "@adviser/cement": ["./src/index.js"],
      "@adviser/cement/node": ["./src/node/index.js"],
      "@adviser/cement/deno": ["./src/deno/index.js"],
      "@adviser/cement/web": ["./src/web/index.js"],
      "@adviser/cement/cf": ["./src/cf/index.js"]
    },
    "types": ["vitest/globals"],
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/ts",
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "vitest.*.ts", "eslint.config.mjs", "smoke/smoke.cjs", "smoke/smoke.ts", "to-cjs.js"],
  "exclude": ["dist/**", "eslint.config.js"]
}
